<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBrakefast.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiBrakefast"
    Shell.FlyoutBehavior="Disabled" 
    Title="MauiBrakefast">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Citty" FontSize="30" FontAttributes="Bold" TextColor="Blue" />
            <Label Text="Brakefast" FontSize="30" FontAttributes="Bold" TextColor="BlueViolet" />
        </StackLayout>
    </Shell.TitleView>


    <ShellContent 
        Title="Citty Brakefast"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>
